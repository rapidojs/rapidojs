{
  "name": "@rapidojs/auth",
  "version": "1.1.0",
  "description": "Official authentication module for Rapido.js, with built-in support for JWT.",
  "main": "dist/index.js",
  "scripts": {
    "build": "pnpm run clean && pnpm run build:swc && pnpm run build:types",
    "build:swc": "swc src -d dist --strip-leading-paths --source-maps --copy-files",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "rapidojs",
    "fastify",
    "auth",
    "jwt",
    "authentication",
    "guard"
  ],
  "author": "Rapido.js Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/jwt": "^8.0.1",
    "@rapidojs/common": "workspace:*",
    "@rapidojs/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "fastify": "^4.26.1",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "fastify": "^4.x",
    "reflect-metadata": "^0.2.x",
    "tsyringe": "^4.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module"
} 